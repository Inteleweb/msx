{
    "type": "pages",
    "headline": "Edit URL",
    "template": {
        "type": "separate",
        "layout": "0,0,2,4",
        "icon": "edit",
        "color": "msx-glass"
    },
    "pages": [
        {
            "items": [
                {
                    "type": "input",
                    "layout": "0,0,2,1",
                    "icon": "link",
                    "title": "URL Suffix",
                    "titleFooter": "https://charidy.com/",
                    "text": "Enter the part after charidy.com/",
                    "data": "url_suffix",
                    "keyboard": "qwerty",
                    "live": true
                },
                {
                    "type": "control",
                    "layout": "0,1,1,1",
                    "icon": "save",
                    "title": "Save URL",
                    "action": "storage:set:saved_url:{DATA:url_suffix}"
                },
                {
                    "type": "control",
                    "layout": "1,1,1,1",
                    "icon": "clear",
                    "title": "Clear",
                    "action": "reload:content"
                },
                {
                    "type": "default",
                    "layout": "0,2,2,1",
                    "icon": "info",
                    "title": "Current URL",
                    "titleFooter": "https://charidy.com/{DATA:url_suffix}",
                    "text": "This is the URL that will be opened"
                },
                {
                    "type": "control",
                    "layout": "0,3,1,1",
                    "icon": "launch",
                    "title": "Test URL +",
                    "action": "video:https://charidy.com/{DATA:url_suffix}+"
                },
                {
                    "type": "control",
                    "layout": "1,3,1,1",
                    "icon": "launch",
                    "title": "Test URL ++",
                    "action": "video:https://charidy.com/{DATA:url_suffix}++"
                }
            ]
        }
    ]
}